<div class="container">
  <h1>Vamos conversar?</h1>
  <h3>Preencha o formulario com suas necessidades que faremos um or√ßamento:</h3>

  <%= simple_form_for @contact, url: new_contato_path, html: { class: 'form-group' } do |f| %>
    <%= f.input :first_name, label: 'Nome', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.input :last_name, label: 'Sobrenome', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.input :company, label: 'Empresa', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.input :cnpj, label: 'CNPJ', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.input :phone_number, label: 'Telefone', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.input :email, label: 'Email', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.input :message, label: 'Sua necessidade', as: :text, wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= f.association :solutions, as: :check_boxes %>
    <%= f.button :submit, 'Enviar', class: "btn btn-primary" %>
  <% end %>
</div>

