<div class="container">
  <h1>Vamos conversar?</h1>
  <h3>Preencha o formulario com suas necessidades que faremos um or√ßamento:</h3>

  <%= simple_form_for @contact, url: contato_index_path do |f| %>
    <%= f.input :first_name, label: 'Nome' %>
    <%= f.input :last_name, label: 'Sobrenome' %>
    <%= f.input :company, label: 'Empresa' %>
    <%= f.input :cnpj, label: 'CNPJ' %>
    <%= f.input :phone_number, label: 'Telefone' %>
    <%= f.input :email, label: 'Email' %>
    <%= f.input :message, label: 'Sua necessidade', as: :text %>
    <%= f.association :solutions, as: :check_boxes %>
    <%= f.button :submit, 'Enviar', class: "btn btn-primary" %>
  <% end %>
</div>

<div class="container">
  <h3>Ou deixe seu email que entraremos em contato</h3>

  <%= simple_form_for @contact, url: contato_index_path do |f| %>
    <%= f.input :email, label:'Email' %>
    <%= f.button :submit,'Enviar',class:"btn btn-primary" %>
  <% end %>
</div>
